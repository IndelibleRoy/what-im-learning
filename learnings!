#include <iostream>
using namespace std;

int main() {
    int* a = new int(10);   // allocate memory manually
    cout << "Value: " << *a << endl;

    delete a;               // free memory manually
    cout << "Memory freed manually!" << endl;

    return 0;
}

//What happens?

//new allocates memory

//delete frees memory immediately

//No background system cleans it for you


//If you forget delete, memory leaks.

//This is why C++ is fast and predictable


Another example (swap – won’t work with pass by value)

#include <iostream>
using namespace std;

void swap(int x, int y) {
    int temp = x;
    x = y;
    y = temp;
}

int main() {
    int a = 5, b = 10;

    swap(a, b);

    cout << a << " " << b << endl;

    return 0;
}

//Another example (swap – works with pass by reference)

#include <iostream>
using namespace std;

void swap(int &x, int &y) {
    int temp = x;
    x = y;
    y = temp;
}

int main() {
    int a = 5, b = 10;

    swap(a, b);

    cout << a << " " << b << endl;

    return 0;
}
